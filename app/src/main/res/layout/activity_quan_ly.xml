<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.QuanLyActivity">

    <!-- Toolbar tiêu đề -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarQuanLy"
        app:title="Điện thoại"
        android:layout_marginTop="35dp"
        android:background="#B2B4C1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/img_them"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_add_24"
            android:layout_gravity="right"
            android:layout_marginRight="10dp">
        </ImageView>
        <ImageView
            android:id="@+id/img_dangXuat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_mobile_friendly_24"
            android:layout_gravity="right"
            android:layout_marginRight="10dp">
        </ImageView>
    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/toolbarQuanLy"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/recyclerView_QuanLy"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>
