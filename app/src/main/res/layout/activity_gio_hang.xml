<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.GioHangActivity">

    <!-- Thông báo giỏ hàng trống -->
    <TextView
        android:id="@+id/txtgiohangtrong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giỏ hàng trống"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarGioHang"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/red"
        app:title="Giỏ hàng"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp" />

    <!-- Danh sách sản phẩm (RecyclerView) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleviewgiohang"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarGioHang"
        app:layout_constraintBottom_toTopOf="@id/spinnerPaymentMethod" />

    <!-- Spinner chọn phương thức thanh toán -->
    <Spinner
        android:id="@+id/spinnerPaymentMethod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/payment_methods"
        app:layout_constraintTop_toBottomOf="@id/recycleviewgiohang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- ImageView hiển thị mã QR khi chọn "Thanh toán Momo" -->
    <ImageView
        android:id="@+id/imgQR"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/qr_momo"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/spinnerPaymentMethod"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Layout hiển thị tổng tiền -->
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/imgQR"
        app:layout_constraintBottom_toTopOf="@id/btnmuahang">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="40dp"
            android:padding="5dp"
            android:text="Tổng tiền: "
            android:textSize="18sp"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txttongtien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:text="0 đ"
            android:textSize="18sp"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Nút mua hàng -->
    <Button
        android:id="@+id/btnmuahang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mua hàng"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
